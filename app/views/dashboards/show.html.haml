#dashboard-frame

  #challenge-leaderboard.widget.three-col
    .widget-header
      %h1.widget-title Challenge Leaderboard
      %p.widget-subtitle

  #blog-visibility.nine-col
    #post-leaderboard.widget.five-col
      .widget-header
        %h1.widget-title Carbon Emitter Post Leaderboard
        %p.widget-subtitle last #{Post::DEFAULT_DAY_RANGE} days, starting #{(Date.today - Post::DEFAULT_DAY_RANGE.days).strftime('%m/%d/%y')}

    #buzz-box.widget.four-col
      .widget-header
        %h1.widget-title Buzz Box

    #blog-traffic-graph.widget.four-col
      .widget-header
        %h1.widget-title Blog Traffic Graph

    #blog-post-bar-chart.widget.four-col
      .widget-header
        %h1.widget-title Blog Post Bar Chart

:javascript
  $(function() {
    Carbometer.Posts.reset(#{@posts})
    setInterval(function() {
      Carbometer.Posts.fetch()
    }, 60000)
  });
